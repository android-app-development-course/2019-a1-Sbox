<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sbox.mine"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@mipmap/mine"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/sub4"
            android:id="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/mine_fresh"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/fresh"
            android:scaleType="fitCenter"
            android:background="@drawable/ad_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/mine_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/addd"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"
            android:textSize="60sp"
            android:background="@drawable/ad_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/imageView2">

           <android.support.v7.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/POSTVIEW">

           </android.support.v7.widget.RecyclerView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
