<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sbox.shop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/shop1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:id="@+id/relativeLayout4">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/shop_goods1" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear2"
                        android:layout_alignTop="@+id/shop_goods1"
                        android:layout_toEndOf="@+id/shop_goods1"
                        android:id="@+id/shop_goods2" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear5"
                        android:layout_alignTop="@+id/shop_goods2"
                        android:layout_toEndOf="@+id/shop_goods2"
                        android:id="@+id/shop_goods3" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear4"
                        android:layout_alignTop="@+id/shop_goods3"
                        android:layout_toEndOf="@+id/shop_goods3"
                        android:id="@+id/shop_goods4" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear1"
                        android:layout_alignTop="@+id/shop_goods4"
                        android:layout_toEndOf="@+id/shop_goods4"
                        android:id="@+id/shop_goods5" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear2"
                        android:layout_alignTop="@+id/shop_goods5"
                        android:layout_toEndOf="@+id/shop_goods5"
                        android:id="@+id/shop_goods6" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear5"
                        android:layout_alignTop="@+id/shop_goods6"
                        android:layout_toEndOf="@+id/shop_goods6"
                        android:id="@+id/shop_goods7" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@mipmap/wear4"
                        android:layout_alignTop="@+id/shop_goods7"
                        android:layout_toEndOf="@+id/shop_goods7"
                        android:id="@+id/shop_goods8" />

                </LinearLayout>

            </HorizontalScrollView>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="To Be Continued..."
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
